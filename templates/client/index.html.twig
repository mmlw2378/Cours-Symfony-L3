{% extends 'base.html.twig' %}

{% block title %}Liste des Clients{% endblock %}

{% block body %}
    <div class="container mb-5">
        <div class="card mt-5">
            <div class="card-header text-center">
                <h2 class="mb-0">Liste des Clients</h2>
            </div>
            <div class="card-body p-3">
                <div class="row my-2 d-flex justify-content-end">
                    <a href="{{ path('app_client_create') }}" class="btn btn-outline-dark col-1.5">Créer un Client</a>
                </div>

                <div class="row mb-4">
                    <form method="get" class="row g-2">
                        <div class="col-md-5">
                            <input type="text" name="surname" placeholder="Nom" class="form-control" value="{{ app.request.get('surname') }}" aria-label="Nom">
                        </div>
                        <div class="col-md-5">
                            <input type="text" name="telephone" placeholder="Téléphone" class="form-control" value="{{ app.request.get('telephone') }}" aria-label="Téléphone">
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-success w-150">Filtrer</button>
                        </div>
                    </form>
                </div>

                <div class="table-responsive">
                    <table class="table table-light table-bordered table-striped">
                        <thead>
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">Nom</th>
                                <th scope="col">Téléphone</th>
                                <th scope="col">Adresse</th>
                                <th scope="col">Statut Compte</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for client in clients %}
                                <tr>
                                    <td>{{ client.id }}</td>
                                    <td>{{ client.surname }}</td>
                                    <td>{{ client.telephone }}</td>
                                    <td>{{ client.adresse }}</td>
                                    <td>
                                        {% if client.compte %}
                                            <span class="badge bg-success">Avec compte</span>
                                        {% else %}
                                            <span class="badge bg-danger">Sans compte</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <a href="{{ path('app_client_dettes', { clientId: client.id }) }}" class="btn btn-outline-dark">Voir Dettes</a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="6" class="text-center">Aucun client trouvé.</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>

                <nav aria-label="Page navigation" class="mt-3">
                    <ul class="pagination justify-content-end">
                        {% if currentPage > 1 %}
                            <li class="page-item">
                                <a class="page-link bg-dark text white" href="{{ path('app_client_list', { page: currentPage - 1, surname: app.request.get('surname'), telephone: app.request.get('telephone') }) }}" aria-label="Précédent">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>
                        {% endif %}

                        {% for page in 1..totalPages %}
                            <li class="page-item {% if page == currentPage %}active{% endif %}">
                                <a class="page-link bg-dark text white" href="{{ path('app_client_list', { page: page, surname: app.request.get('surname'), telephone: app.request.get('telephone') }) }}">{{ page }}</a>
                            </li>
                        {% endfor %}

                        {% if currentPage < totalPages %}
                            <li class="page-item">
                                <a class="page-link bg-dark text white" href="{{ path('app_client_list', { page: currentPage + 1, surname: app.request.get('surname'), telephone: app.request.get('telephone') }) }}" aria-label="Suivant">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        {% endif %}
                    </ul>
                </nav>
            </div>
        </div>
    </div>
{% endblock %}