{% extends 'base.html.twig' %}

{% block title %}Liste des Clients{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4">Liste des Clients</h1>

    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card p-3 shadow-sm">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Actions</h5>
                    <a href="{{ path('app_client_create') }}" class="btn btn-success ms-2">Créer un Client</a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card p-3 shadow-sm">
                <form method="get" class="row g-2">
                    <div class="col-md-5">
                        <input type="text" name="surname" placeholder="Surname" class="form-control" value="{{ app.request.get('surname') }}" aria-label="Surname">
                    </div>
                    <div class="col-md-5">
                        <input type="text" name="telephone" placeholder="Téléphone" class="form-control" value="{{ app.request.get('telephone') }}" aria-label="Téléphone">
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-dark w-150">Filtrer</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
   


    <div class="table-responsive">
        <table class="table table-hover table-bordered mt-3">
            <thead class="thead-light">
                <tr>
                    <th class="text-center">ID</th>
                    <th class="text-center">Surname</th>
                    <th class="text-center">Téléphone</th>
                    <th class="text-center">Adresse</th>
                    <th class="text-center">Compte</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for client in clients %}
                    <tr>
                        <td class="text-center">{{ client.id }}</td>
                        <td class="text-center">{{ client.surname }}</td>
                        <td class="text-center">{{ client.telephone }}</td>
                        <td class="text-center">{{ client.adresse }}</td>
                        <td class="text-center">
                            {% if client.compte %}
                                <span class="text-success"><b>Avec compte</b></span>
                            {% else %}
                                <span class="text-danger"><b>Sans compte</b></span>
                            {% endif %}
                        </td>
                        <td class="text-center">
                            <a href="{{ path('app_client_dettes', { clientId: client.id }) }}" class="btn btn-secondary">Dettes</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="text-center">Aucun client trouvé.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="d-flex justify-content-end mt-3">
        <nav aria-label="Page navigation">
            <ul class="pagination">
                {% if currentPage > 1 %}
                    <li class="page-item">
                        <a class="page-link bg-dark text-white" href="{{ path('app_client_list', { page: currentPage - 1, surname: surname, telephone: telephone }) }}">Précédent</a>
                    </li>
                {% endif %}

                {% for page in 1..totalPages %}
                    <li class="page-item {% if page == currentPage %}active{% endif %}">
                        <a class="page-link bg-dark text-white" href="{{ path('app_client_list', { page: page, surname: surname, telephone: telephone }) }}">{{ page }}</a>
                    </li>
                {% endfor %}

                {% if currentPage < totalPages %}
                    <li class="page-item">
                        <a class="page-link bg-dark text-white" href="{{ path('app_client_list', { page: currentPage + 1, surname: surname, telephone: telephone }) }}">Suivant</a>
                    </li>
                {% endif %}
            </ul>
        </nav>
    </div>
</div>
{% endblock %}